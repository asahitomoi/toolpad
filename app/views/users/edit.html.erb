<div class="container">
  <h1>お客様情報の変更</h1>
  <%= render 'layouts/error_message', er:@user %>
  <table class="table" id="info_table">
    <thead>
    	<tr>
    		<th>登録情報</th>
    		<th>登録内容</th>
    	</tr>
    </thead>
    <tbody>
      <%= form_for(@user) do |user| %>
        <tr>
            <td>名前</td>
            <td><%= user.text_field :name%></td>
        </tr>
        <tr>
            <td>写真を変更する</td>
            <td><%= user.file_field :user_name_id %></td>
        </tr>
        <tr>
    	    <td>メールアドレス</td>
    	    <td><%= user.text_field :email%></td>
        </tr>
        <tr>
            <td>パスワード</td>
            <td><%= user.password_field :password, value: @user.password %></td>
        </tr>
        <tr>
            <td>パスワードの確認</td>
            <td><%= user.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
        <tr>
        	<td>性別</td>
        	<td><%= user.select :gender, User.genders.keys, {prompt: '選択してください'}%></td>
        </tr>
       <tr>
        	<td>年代</td>
        	<td><%= user.select :age, User.ages.keys, {prompt: '選択してください'}%></td>
        </tr>
         <tr>
            <td>ひとこと</td>
            <td><%= user.text_field :introduce%></td>
        </tr>
    </tbody>
  </table>
  <div class="info_btn"><%= user.submit "変更内容を登録する", class:"btn btn-success" %></div>
<% end %>
</div>