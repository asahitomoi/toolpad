<div class="container">
	<div class="row">
		<div class="col-lg-3">
     	<%= render 'layouts/search_form'%>
        </div>
        <div class="col-lg-9">
        <%= render 'user_info'%>
			<div class="user_favorite">
				<ul class="nav nav-tabs">
	                <li role="presentation"><%= link_to "投稿した作品をみる", user_path(@user.id) %></li>
	                <li role="presentation" class="active"><%= link_to "保存した作品をみる", user_favorite_path(@user.id) %></li>
                </ul>
				<h4>保存した作品</h4>
			  <% if @favorites != nil %>
				<%= render 'posts/post', posts: @favorites %>
		        <div class="pager"><%= paginate @favorites %></div>
		      <% else %>
		        <p>保存している作品はありません</p>
		      <% end %>
		    </div>
        </div>
    </div>
</div>