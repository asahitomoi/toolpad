<div class="container">
	<div class="row">
		<div class="col-lg-3">
     	<%= render 'layouts/search_form'%>
        </div>
        <div class="col-lg-9">
        <%= render 'user_info'%>
			<div class="user_post">

			  <ul class="nav nav-tabs">
	            <li role="presentation" class="active"><%= link_to "投稿した作品をみる", user_path(@user.id) %></li>
	            <li role="presentation"><%= link_to "保存した作品をみる", user_favorite_path(@user.id) %></li>
	            <% if current_user.admin? %>
	            <li role="presentation"><%= link_to "会員一覧", users_path %></li>
	            <% end %>
              </ul>

				<h4>投稿した作品</h4>

				<%= render 'posts/post', posts: @post %>
			 <div class="pager"><%= paginate @post %></div>

			</div>

        </div>
    </div>
</div>

