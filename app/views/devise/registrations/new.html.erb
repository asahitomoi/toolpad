<div class="content">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="registration_box">
    <div class="icon">
    </div>
    <p>
      ご入力のメールアドレスに<br>
      会員登録用のURLを送信します
    </p>
    <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレスを入力してください" %>
    </div>
    <div class="field">
      <%= f.label :パスワードを入力してください %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワードを入力してください（@minimum_password_length文字以上）" %>
    </div>

    <div class="field">
    <%= f.label :パスワードを再入力してください %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
    <%= f.submit "送信する" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>