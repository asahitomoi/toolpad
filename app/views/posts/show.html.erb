<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>


<div class="post">
	<div class="post_top">
	  <%= @post.title %>
		<div class="top_left">
			<% if @post.post_image_id? %>
            　　  <%= image_tag @post.post_image_id.url %>
            　  <% else %>
            　　  <%= image_tag 'nz.jpg' %>
            　  <% end %>
		</div>
		<div class="top_right">
			<div class="copy">
				<%= @post.copy %>
			</div>
			<div class="maker">
				作品を作った人：<%= @user.name %>さん
			</div>
			<div class="material">
				 <table class="table">
					<thead>
						<tr>
							<th>材料</th>
							<th>分量</th>
						</tr>
					</thead>
					<tbody>
					  <% @post.materials.each do |f|%>
						<tr>
							<td><%= f.material %></td>
							<td><%= f.amount %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="post_middle">
		<div class="recipe">
		  <%= @post.recipes.each do |f| %>
			<div class="recipe_image">
				<% if f.recipe_image_id? %>
            　　  <%= image_tag f.recipe_image_id.url %>
            　  <% else %>
            　　  <%= image_tag 'nz.jpg' %>
            　  <% end %>
			</div>
			<div class="recipe_text">
				<%= f.recipe %>
			</div>
		  <% end %>
		</div>
	</div>
	<div class="post_bottom">
		<div class="tip">
			<%= @post.tip %>
		</div>
	</div>
</div>